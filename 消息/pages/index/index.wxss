/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.form-cell_title {
  margin-bottom: 10px;
  font-size: medium;
}

.form-cell_title-placeholder {
  font-size: small;
  color: lightgray;
}

.upload-text {
  margin-left: auto;
  opacity: 0.5;
}

.upload {
  width: 15px;
  height: 15px;
  margin-left: 10px;
}

.option {
  margin-left: 15vw;
}

.selector {
  width: 15px;
  height: 15px;
  margin-left: auto;
}

.footer {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: lightgray solid 1px;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  text-align: center;
}

.reset {
  background: white;
}

.save {
  color: white;
  background: #353535;
}